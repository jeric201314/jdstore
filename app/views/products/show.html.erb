

<div class="card">
  <div class="container-fliud">
    <div class="wrapper row">
      <div class="preview col-md-6">

        <div class="preview-pic tab-content">
          <div class="tab-pane active" id="pic-1">
            <% if @product.image.present? %>
            <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/400x252&text=No Pic", class: "thumbnail") %>
            <% end %>
          </div>
          <div class="tab-pane" id="pic-2"><img src="http://placehold.it/400x252&text=No"/></div>
          <div class="tab-pane" id="pic-3"><img src="http://placehold.it/400x252&text=No"/></div>
          <div class="tab-pane" id="pic-4"><img src="http://placehold.it/400x252&text=No"/></div>
          <div class="tab-pane" id="pic-5"><img src="http://placehold.it/400x252&text=No"/></div>
        </div>
        <ul class="preview-thumbnail nav nav-tabs">
          <li class="active">
            <a data-target="#pic-1" data-toggle="tab"><img src="http://placehold.it/200x126&text=No"/></a>
          </li>
          <li>
            <a data-target="#pic-2" data-toggle="tab"><img src="http://placehold.it/200x126&text=No"/></a>
          </li>
          <li>
            <a data-target="#pic-3" data-toggle="tab"><img src="http://placehold.it/200x126&text=No"/></a>
          </li>
          <li>
            <a data-target="#pic-4" data-toggle="tab"><img src="http://placehold.it/200x126&text=No"/></a>
          </li>
          <li>
            <a data-target="#pic-5" data-toggle="tab"><img src="http://placehold.it/200x126&text=No"/></a>
          </li>
        </ul>

      </div>
      <div class="details col-md-6">
        <h3 class="product-title">日本最好吃的零食</h3>
        <div class="rating">
          <div class="stars">
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
          </div>
          <span class="review-no">
            <h2><%= @product.title %></h2>
          </span>
        </div>
        <p class="product-description">
          <%= @product.description %>
        </p>
        <h4 class="price">current price:
          <span>￥
            <%= @product.price %></span>
        </h4>
        <p class="vote">
          <strong>91%</strong>
          of buyers enjoyed this product!
          <strong>(87 votes)</strong>
        </p>
        <div>

          <form id='myform' method='POST' action='#' class="numbo">
            数量 :
            <input type='button' value='-' class='qtyminus' field='quantity' style="font-weight: bold;"/>
            <input type='text-center' name='quantity' value='1' class='qty' style="margin-bottom: 0px !important" onkeypress='return event.charCode >= 48 && event.charCode <= 57'/>
            <input type='button' value='+' class='qtyplus' field='quantity' style="font-weight: bold;"/>
          </form>
        </div>
        <div class="action">
          <button class="add-to-cart" type="button">
            <% if @product.quantity.present? && @product.quantity > 0 %>
            <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post,
                            class: "btn btn-lg btn-danger") %>
          <% else %>
            已销售一空，无法购买
            <% end %>
          </button>
          <button class="like btn btn-default" type="button">
            <span class="fa fa-heart"></span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
